<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddFoodActivity">

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="음식이름1"/>

    <TextView
        android:id="@+id/oneSupplyAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/foodName"
        app:layout_constraintTop_toBottomOf="@+id/foodName"
        tools:text="음식양1"/>

    <TextView
        android:id="@+id/kcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="50dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="@+id/foodName"
        app:layout_constraintBottom_toBottomOf="@+id/foodName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/foodName"
        tools:text="1kcal"/>

    <ImageView
        android:id="@+id/foodPlus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="-40dp"
        app:layout_constraintTop_toTopOf="@id/kcal"
        app:layout_constraintBottom_toBottomOf="@id/kcal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_add_circle" />
<!--        android:onClick="onDialogBtnClicked"-->



</androidx.constraintlayout.widget.ConstraintLayout>